<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频定时分割器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6750A4"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/progress_bg">

        <TextView
            android:id="@+id/tvEncoderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检测编码能力中..."
            android:textSize="13sp"
            android:textColor="#666666"/>

        <Switch
            android:id="@+id/switchHardwareEncoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="启用硬件加速"
            android:textSize="14sp"
            android:checked="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="视频质量："
            android:textSize="13sp"
            android:textColor="#666666"/>

        <RadioGroup
            android:id="@+id/rgQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <RadioButton
                android:id="@+id/rbFast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="快速"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rbBalanced"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平衡"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/rbQuality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="高质量"
                android:textSize="13sp"
                android:checked="true"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnSelectVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择视频"
        android:textSize="16sp"
        android:backgroundTint="#6750A4"/>

    <TextView
        android:id="@+id/tvSelectedVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未选择视频"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="#666666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分割间隔（秒）："
        android:textSize="16sp"
        android:textColor="#6750A4"/>

    <EditText
        android:id="@+id/etInterval"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="点击下方或直接输入"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn3s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3秒"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#6750A4"/>

        <Button
            android:id="@+id/btn4s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4秒"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#6750A4"/>

        <Button
            android:id="@+id/btn5s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5秒"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#6750A4"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始分割"
        android:textSize="16sp"
        android:enabled="false"
        android:backgroundTint="#6750A4"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="取消"
        android:textSize="16sp"
        android:visibility="gone"
        android:backgroundTint="#F44336"/>

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:padding="16dp"
        android:background="@drawable/progress_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/spinnerProgress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:indeterminateTint="#6750A4"/>

            <TextView
                android:id="@+id/tvProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在分割 0%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6750A4"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#6750A4"
            android:progressBackgroundTint="#E0E0E0"/>

        <TextView
            android:id="@+id/tvProgressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理中..."
            android:textSize="14sp"
            android:textColor="#666666"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textColor="#333333"
        android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>
